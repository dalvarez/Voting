<h2> Public Forum</h2>
<table>
  <tr>
    <th>Group Name</th>
	<th>Group Description</th>
  </tr>
  
<% @groups.each do |group| %>
 <% if (group.public == 1) %>
  <tr>
	
    <td><h3><%= link_to group.gname, group_events_path(group) %></h3></td>
	
	<td><%=h group.description %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br>
