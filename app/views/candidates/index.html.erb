<h1>Listing candidates</h1>

<table>
  <tr>
    <th>Fname</th>
    <th>Description</th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%=h candidate.fname %></td>
    <td><%=h candidate.description %></td>
    <td><%= button_to "VOTE", :action => "quick_vote", :candidate_id =>candidate.id, :candidate_name => candidate.fname %></td>
  </tr>
<% end %>
</table>

